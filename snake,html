<!DOCTYPE html>
<html>
<head>
  <title>Snake Game</title>
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      background: #F5F5DC; /* Beige background */
      font-family: Arial, sans-serif;
    }
    canvas {
      border: 2px solid #4A7043; /* Dark green border */
      background: #FFF8DC; /* Light beige canvas background */
    }
    #score {
      margin-bottom: 10px;
      font-size: 20px;
      color: #4A7043; /* Green text */
    }
    #restart {
      margin-top: 10px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      background: #4A7043; /* Green button */
      color: #F5F5DC; /* Beige text */
      border: none;
      border-radius: 5px;
      transition: background 0.3s;
    }
    #restart:hover {
      background: #5D8A4F; /* Lighter green on hover */
    }
    #signature {
      margin-top: 10px;
      font-size: 14px;
      color: #4A7043; /* Green text */
    }
  </style>
</head>
<body>
  <div id="score">Score: 0</div>
  <canvas id="gameCanvas" width="400" height="400"></canvas>
  <button id="restart" style="display: none;">Restart Game</button>
  <div id="signature">by 0fekree0</div>
  <script>
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    const scoreDisplay = document.getElementById('score');
    const restartButton = document.getElementById('restart');
    const gridSize = 20;
    const tileCount = canvas.width / gridSize;
    let snake = [{ x: 10, y: 10 }];
    let food = { x: Math.floor(Math.random() * tileCount), y: Math.floor(Math.random() * tileCount) };
    let dx = 0;
    let dy = 0;
    let score = 0;
    let gameOver = false;
    let gameLoop;

    function drawGame() {
      if (gameOver) return;

      // Clear canvas
      ctx.fillStyle = '#FFF8DC'; /* Light beige canvas */
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      // Move snake
      const head = { x: snake[0].x + dx, y: snake[0].y + dy };
      snake.unshift(head);

      // Check if snake eats food
      if (head.x === food.x && head.y === food.y) {
        score += 1;
        scoreDisplay.textContent = `Score: ${score}`;
        food = { x: Math.floor(Math.random() * tileCount), y: Math.floor(Math.random() * tileCount) };
      } else {
        snake.pop();
      }

      // Check for collisions
      if (head.x < 0 || head.x >= tileCount || head.y < 0 || head.y >= tileCount) {
        endGame();
        return;
      }
      for (let i = 1; i < snake.length; i++) {
        if (head.x === snake[i].x && head.y === snake[i].y) {
          endGame();
          return;
        }
      }

      // Draw food
      ctx.fillStyle = '#E57373'; /* Soft coral for food */
      ctx.beginPath();
      ctx.arc(food.x * gridSize + gridSize / 2, food.y * gridSize + gridSize / 2, gridSize / 2 - 2, 0, Math.PI * 2);
      ctx.fill();

      // Draw snake with realistic styling
      snake.forEach((segment, index) => {
        ctx.fillStyle = index === 0 ? '#355E3A' : '#4A7043'; /* Darker green head, green body */
        ctx.beginPath();
        const radius = index === 0 ? gridSize / 2 : gridSize / 2 - (index / snake.length) * 2; /* Larger head, tapered tail */
        ctx.arc(segment.x * gridSize + gridSize / 2, segment.y * gridSize + gridSize / 2, radius, 0, Math.PI * 2);
        ctx.fill();

        // Add "eyes" on head
        if (index === 0) {
          ctx.fillStyle = '#FFFFFF';
          ctx.beginPath();
          ctx.arc(segment.x * gridSize + gridSize / 3, segment.y * gridSize + gridSize / 3, 2, 0, Math.PI * 2);
          ctx.arc(segment.x * gridSize + gridSize * 2 / 3, segment.y * gridSize + gridSize / 3, 2, 0, Math.PI * 2);
          ctx.fill();
        }
      });

      // Add subtle shadow for depth
      ctx.shadowColor = 'rgba(0, 0, 0, 0.2)';
      ctx.shadowBlur = 3;
      ctx.shadowOffsetX = 2;
      ctx.shadowOffsetY = 2;
    }

    function endGame() {
      gameOver = true;
      clearInterval(gameLoop);
      ctx.fillStyle = '#4A7043'; /* Green game over text */
      ctx.font = '30px Arial';
      ctx.textAlign = 'center';
      ctx.fillText('Game Over', canvas.width / 2, canvas.height / 2);
      restartButton.style.display = 'block';
    }

    function resetGame() {
      snake = [{ x: 10, y: 10 }];
      food = { x: Math.floor(Math.random() * tileCount), y: Math.floor(Math.random() * tileCount) };
      dx = 0;
      dy = 0;
      gameOver = false;
      restartButton.style.display = 'none';
      ctx.shadowBlur = 0; /* Reset shadow for game over text */
      gameLoop = setInterval(drawGame, 100);
    }

    document.addEventListener('keydown', e => {
      if (gameOver) return;
      switch (e.key) {
        case 'ArrowUp':
          if (dy === 0) { dx = 0; dy = -1; }
          break;
        case 'ArrowDown':
          if (dy === 0) { dx = 0; dy = 1; }
          break;
        case 'ArrowLeft':
          if (dx === 0) { dx = -1; dy = 0; }
          break;
        case 'ArrowRight':
          if (dx === 0) { dx = 1; dy = 0; }
          break;
      }
    });

    restartButton.addEventListener('click', resetGame);

    // Start game
    resetGame();
  </script>
</body>
</html>
